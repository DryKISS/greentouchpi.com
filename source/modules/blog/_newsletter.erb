<%#
Newsletter

@usage
= partial '_newsletter/newsletter'

@author Ian Warner <ian.warner@drykiss.com>
@category blog
%>

<section class="newsletter">

  <div class="container">

    <div class="row">

      <div class="col-md-6 col-md-offset-3">

        <%= t(:'newsletter.strapline') %>

        <%# Input - Newsletter %>
        <%= partial 'partials/atom/input.erb', locals: {
          input: { name: 'email',
                  placeholder: :'newsletter.form.email.placeholder',
                  required: true,
                  type: 'email' },
          label: { title: 'Email', extraClass: 'sr-only' } } %>

        <%# Button - Newsletter %>
        <%= partial 'partials/atom/button.erb', locals: { text: :'newsletter.button' } %>

      </div>

    </div>

  </div>

</section>
