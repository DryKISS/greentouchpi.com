---
pageable: true
template: true
---

<%#
Category template

@todo Add Schema.org info for the Author elements
%>

<%
content_for :title, t(:"meta.#{category.gsub(/\s/, '-')}.title")
content_for :description, t(:"meta.#{category.gsub(/\s/, '-')}.description")
prevPage = prev_page || false
nextPage = next_page || false
%>

<div class="blog-category <%= category %>">

  <%# Page strip %>
  <%= partial 'modules/blog/page-strip.erb', locals: {text: category.titleize} %>

  <div class="blog-category__list clearfix">

    <div class="row">

      <%# Article list %>
      <% page_articles.each do |article| %>
        <div class="col-xs-12 col-sm-6">
          <%= partial 'modules/blog/post-card.erb', locals: {article: article.data, url: article.url} %>
        </div>
      <% end %>

    </div>

  </div>

  <%# Pagination %>
  <div class="blog-category__pagination">
    <%= partial 'partials/molecule/pagination.erb', locals: {
      nextPage: nextPage,
      prevPage: prevPage,
      pageNo: page_number,
      pages: num_pages} %>
  </div>

</div>
