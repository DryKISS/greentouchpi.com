<%#
Icon

Usage
partial 'partials/atom/icon.erb', locals: { icon: 'fa-instagram' }

@author Ian Warner <ian.warner@drykiss.com>
@category atom
%>

<%# Variable %>
<%
extraClass = locals[:icon] ? "class=\"fa #{locals[:icon]}\"" : nil
ng = locals[:ng] ? "ng=\"#{locals[:ng]}\"" : nil
%>

<%# Capture %>
<% captureHTML = capture do %>
  <span <%= extraClass %>></span>
<% end %>

<%# Check for link %>
<% if locals[:link] %>
  <%= link_to(captureHTML, locals[:link][:url], locals[:link][:attribute]) %>

<% else %>
  <%= captureHTML %>

<% end %>
